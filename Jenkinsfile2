pipeline {
    agent any

    environment {
        // Define your environment variables
        CHAT_ID = ''
        TOKEN = ''
    }

    stages {
        stage('Pre-Build') {
            steps {
                script {
                    // Menggunakan blok withCredentials untuk mengambil nilai
                    withCredentials([string(credentialsId: 'telegram-credentials', variable: 'TOKEN'),
                                     string(credentialsId: 'Telegram_ChatID', variable: 'CHAT_ID')]) {

                        // Menggunakan variabel-variabel yang telah diambil
                        sh "curl --location --request POST 'https://api.telegram.org/bot${TOKEN}/sendMessage' --form text='${TEXT_PRE_BUILD}' --form chat_id='${CHAT_ID}'"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
    }

    post {
        success {
            script {
                // Menggunakan blok withCredentials untuk mengambil nilai
                withCredentials([string(credentialsId: 'telegram-credentials', variable: 'TOKEN'),
                                 string(credentialsId: 'Telegram_ChatID', variable: 'CHAT_ID')]) {

                    // Menggunakan variabel-variabel yang telah diambil
                    sh "curl --location --request POST 'https://api.telegram.org/bot${TOKEN}/sendMessage' --form text='${TEXT_SUCCESS_BUILD}' --form chat_id='${CHAT_ID}'"
                }
            }
        }

        failure {
            script {
                // Menggunakan blok withCredentials untuk mengambil nilai
                withCredentials([string(credentialsId: 'telegram-credentials', variable: 'TOKEN'),
                                 string(credentialsId: 'Telegram_ChatID', variable: 'CHAT_ID')]) {

                    // Menggunakan variabel-variabel yang telah diambil
                    sh "curl --location --request POST 'https://api.telegram.org/bot${TOKEN}/sendMessage' --form text='${TEXT_FAILURE_BUILD}' --form chat_id='${CHAT_ID}'"
                }
            }
        }
    }
}
